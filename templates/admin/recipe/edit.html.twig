{% extends "admin/admin.html.twig" %}

{% block title 'Édition : ' ~ recipe.title | upper %}

{% block body %}
  <h1>Édition de {{ recipe.title }}</h1>
  <span class="text-muted">Created by : {{ recipe.user.username | default('') }}</span>
  <br />
  <img src="{{ vich_uploader_asset(recipe, 'thumbnailFile') }}" alt="{{ recipe.title }}">

  {{ form_start(form) }}
    <div hidden>
      {{ form_row(form.slug) }}
    </div>
  {{ form_end(form) }}
{% endblock %}